---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Resume Selection | Marco" sideBarActiveItemID="cv">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Select the right CV</div>
    <div class="text-lg py-2">
      I have several areas of specialization. Choose the professional profile you are interested in exploring:
    </div>
  </div>

  <div class="flex flex-col gap-4">
    
    <HorizontalCard
      title="Blockchain Developer"
      img="/cv-blockchain.webp" 
      desc="Specialized in Smart Contracts development, DeFi, NFTs, and decentralized architectures (EVM & Cardano)."
      badge="Blockchain"
      url="/cv/blockchain.pdf"
      target="_self"
      download = true
    />
    <div class="divider my-0"></div>

    <HorizontalCard
      title="Fullstack Developer"
      img="/cv-fullstack.webp" 
      desc="End-to-end applications development using Typescript with Angular/React, Flutter for the front-end and NodeJS/Java for the back-end."
      badge="Fullstack"
      url="/cv/fullstack.pdf"
      target="_self"
      download = true
    />
    <div class="divider my-0"></div>

    <HorizontalCard
      title="Java Back-end Developer"
      img="/cv-backend.webp" 
      desc="Microservices development using Spring/Springboot and Java as main tools."
      badge="Back-end"
      url="/cv/backend.pdf"
      target="_self"
      download = true
    />
    <div class="divider my-0"></div>


  </div>
</BaseLayout>