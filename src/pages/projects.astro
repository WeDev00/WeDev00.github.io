---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects Header</div>
  </div>

  <HorizontalCard
    title="Pure C Server"
    img="/pure_C.webp"
    desc="RESTFul server in pure C"
    url="/projects/pure-c-server"
    badge="NEW"
    target="_self"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Uniswap V2 Sniperbot"
    img="/sniper.webp"
    desc="Bot to flash-trade coins on Uniswap V2"
    url="/projects/uniswap_v2_sniperbot"
    target="_self"
  />
  <div class="divider my-0"></div>
</BaseLayout>
