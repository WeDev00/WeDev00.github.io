---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
---

<BaseLayout
  title="Uniswap V2 Sniperbot"
  description="Automated trading bot for newly listed tokens on Uniswap V2, written in Node.js."
  sideBarActiveItemID="projects"
>
  <main class="md:flex md:justify-center">
    <article class="max-w-[750px] prose-img:mx-auto">

      <!-- Hero image -->
      <Image
        src="/sniper.webp"
        width={300}
        height={100}
        format="webp"
        alt="Uniswap V2 Sniperbot"
        class="mb-6 rounded-xl shadow-lg"
      />

      <!-- Title -->
      <h1 class="my-2 text-4xl font-bold">Uniswap V2 Sniperbot</h1>

      <!-- Badges -->
      <div class="flex flex-wrap gap-2 mb-4 not-prose">
        <div class="badge badge-secondary">Node.js</div>
        <div class="badge badge-outline">Web3</div>
        <div class="badge badge-outline">DeFi</div>
        <div class="badge badge-outline">Automation</div>
        <div class="badge badge-outline">Uniswap V2</div>
      </div>

      <div class="divider my-2"></div>

      <!-- GitHub button -->
      <div class="mb-8 not-prose">
        <a
          href="https://github.com/wedev00/Uniswap-V2-sniper-bot"
          target="_blank"
          class="btn btn-outline inline-flex items-center gap-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            width="20"
            height="20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M12.026 2c-5.509 0-9.974 4.465-9.974 9.974
              0 4.406 2.857 8.145 6.821 9.465.499.09.679-.217.679-.481
              0-.237-.008-.865-.011-1.696-2.775.602-3.361-1.338-3.361-1.338
