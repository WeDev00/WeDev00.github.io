              1.002.07 1.527 1.028 1.527 1.028.89 1.524 2.336 1.084 2.902.829
              .091-.645.351-1.085.635-1.335-2.214-.251-4.542-1.107-4.542-4.93
              0-1.087.389-1.979 1.024-2.675-.101-.253-.446-1.268.099-2.64
              0 0 .837-.269 2.742 1.021a9.582 9.582 0 0 1 2.496-.336
              9.554 9.554 0 0 1 2.496.336c1.906-1.291 2.742-1.021 2.742-1.021
              .545 1.372.203 2.387.099 2.64.64.696 1.024 1.587 1.024 2.675
