---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
---

<BaseLayout
  title="Pure C Server"
  description="A monolithic REST server written entirely in C, without using any framework."
  sideBarActiveItemID="projects"
>
  <main class="md:flex md:justify-center">
    <article class="max-w-[750px]  prose-img:mx-auto">

      <!-- Hero image -->
      <Image
        src="/pure_C.webp"
        width={300}
        height={100}
        format="webp"
        alt="Pure C Server"
        class="mb-6 rounded-xl shadow-lg"
      />

      <!-- Title -->
      <h1 class="my-2 text-4xl font-bold">Pure C Server</h1>

      <!-- Badges -->
      <div class="flex flex-wrap gap-2 mb-4 not-prose">
        <div class="badge badge-secondary">C</div>
        <div class="badge badge-outline">REST</div>
        <div class="badge badge-outline">Monolithic</div>
        <div class="badge badge-outline">No Framework</div>
      </div>

      <div class="divider my-2"></div>

      <!-- GitHub button -->
      <div class="mb-8 not-prose">
        <a
          href="https://github.com/wedev00/pure_c_server"
          target="_blank"
          class="btn btn-outline inline-flex items-center gap-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            width="20"
            height="20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
