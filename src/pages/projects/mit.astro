---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
---

<BaseLayout
  title="mit"
  description="Minimal Implementation of git in C"
  sideBarActiveItemID="projects"
>
  <main class="md:flex md:justify-center">
    <article class="prose prose-lg max-w-[750px] prose-img:mx-auto">

      <!-- Hero image -->
      <Image
        src="/mit.webp"
        width={300}
        height={100}
        format="webp"
        alt="mit – Minimal git implementation"
        class="mb-6 rounded-xl shadow-lg"
      />

      <!-- Title -->
      <h1 class="my-2 text-4xl font-bold">MIT</h1>

      <!-- Badges -->
      <div class="flex flex-wrap gap-x-2 gap-y-2 mb-4">
        <div class="badge badge-secondary">C</div>
        <div class="badge badge-outline">Git Internals</div>
        <div class="badge badge-outline">CLI Tool</div>
      </div>

      <div class="divider my-2"></div>

      <!-- GitHub button -->
      <div class="mb-8">
        <a
          href="https://github.com/wedev00/mit"
          target="_blank"
          class="btn btn-outline"
        >
          <svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  width="20"
  height="20"
  fill="currentColor"
  class="inline-block"
>
